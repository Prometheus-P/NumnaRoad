{
  "name": "numnaroad",
  "version": "0.2.0",
  "private": true,
  "description": "NumnaRoad - Automated travel connectivity platform with 24/7 order processing",
  "keywords": [
    "esim",
    "travel",
    "automation",
    "ecommerce",
    "pocketbase",
    "nextjs"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Prometheus-P/NumnaRoad.git"
  },
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "build": "npm run build --workspace=apps/web",
    "start": "npm run start --workspace=apps/web",
    "lint": "npm run lint --workspace=apps/web",
    "type-check": "tsc --noEmit -p apps/web/tsconfig.json",
    "test": "npm run test --workspace=apps/web",
    "test:run": "npm run test:run --workspace=apps/web",
    "test:watch": "npm run test --workspace=apps/web -- --watch",
    "test:unit": "vitest run --dir tests/unit",
    "pocketbase:serve": "cd pocketbase && ./pocketbase serve",
    "pocketbase:migrate": "cd pocketbase && ./pocketbase migrate",
    "seed": "tsx scripts/seed-products.ts",
    "backup": "bash scripts/backup.sh"
  },
  "workspaces": [
    "apps/*",
    "services/*"
  ],
  "dependencies": {
    "@tanstack/react-query": "^5.0.0",
    "clsx": "^2.1.0",
    "date-fns": "^3.0.0",
    "next": "^14.2.35",
    "playwright": "^1.57.0",
    "pocketbase": "^0.21.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "solapi": "^5.5.3",
    "stripe": "^14.0.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@csstools/css-parser-algorithms": "^3.0.5",
    "@csstools/css-tokenizer": "^3.0.4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.3.1",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.2.0",
    "jest": "^29.7.0",
    "jsdom": "^27.2.0",
    "postcss": "^8.4.0",
    "prettier": "^3.2.0",
    "prettier-plugin-tailwindcss": "^0.5.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "overrides": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0"
  }
}
